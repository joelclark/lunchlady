#!/usr/bin/env python3
"""Launch script for Lunch Lady FastAPI server."""

import argparse
import uvicorn


def main():
    """Run the FastAPI server."""
    parser = argparse.ArgumentParser(
        description='Run the Lunch Lady web server'
    )
    parser.add_argument(
        '--reload',
        action='store_true',
        help='Enable auto-reload for development'
    )
    parser.add_argument(
        '--host',
        default='127.0.0.1',
        help='Host to bind to (default: 127.0.0.1)'
    )
    parser.add_argument(
        '--port',
        type=int,
        default=8000,
        help='Port to bind to (default: 8000)'
    )
    args = parser.parse_args()

    print("üçî Starting Lunch Lady server...")
    print(f"   Host: {args.host}")
    print(f"   Port: {args.port}")
    if args.reload:
        print("   Auto-reload: ENABLED")
    print()

    uvicorn.run(
        "fastapi_app:app",
        host=args.host,
        port=args.port,
        reload=args.reload
    )


if __name__ == '__main__':
    main()
